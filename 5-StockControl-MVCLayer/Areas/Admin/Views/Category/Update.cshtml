@model StockControl_EntityLayer.Entities.Concrete.Category

<h1 class="text-center my-4">Kategori Güncelle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update" class="bg-light p-4 rounded shadow-sm">
            <h4 class="mb-4">Kategori Bilgileri</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" placeholder="Açıklama" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Açıklama" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="ID" type="hidden" />
                <input asp-for="IsActive" type="hidden" />
                <input asp-for="AddedDate" type="hidden" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
