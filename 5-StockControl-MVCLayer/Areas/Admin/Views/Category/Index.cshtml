@model IEnumerable<StockControl_EntityLayer.Entities.Concrete.Category>


<p class="text-end">
    <a class="btn btn-primary" asp-action="Create">Yeni Kategori Ekle</a>
</p>

<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="text-center">
               Açıklama
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="align-middle text-center">
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td class="align-middle text-center">
                    <a class="btn btn-warning btn-sm me-1" asp-controller="Product" asp-action="Update" asp-route-id="@item.ID">
                        <i class="bi bi-pencil-square"></i> Güncelle
                    </a>
                    @if (item.IsActive)
                    {
                        <a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ID">
                            <i class="bi bi-x-circle"></i> Pasif Et
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="MakeActive" asp-route-id="@item.ID">
                            <i class="bi bi-check-circle"></i> Aktif Et
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
